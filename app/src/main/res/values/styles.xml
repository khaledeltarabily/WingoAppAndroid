    <!--</style>-->

    <style name="AlertStyle" parent="AlertDialog.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="AddAdStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/profileColor</item>
        <item name="colorPrimaryDark">@color/profileColor</item>
        <item name="android:actionMenuTextColor">@color/appColorWhite</item>
        <item name="colorAccent">@color/appColorWhite</item>
        <item name="colorControlActivated">@color/appColorWhite</item>
    </style>


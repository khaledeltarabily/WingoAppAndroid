<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/livebg"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <FrameLayout
        android:layout_width="@dimen/_150sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
    <ImageView
        android:id="@+id/user_image_vip"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="wrap_content"
        android:background="@drawable/group2823"
        />
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="@dimen/_55sdp"
            android:layout_height="@dimen/_50sdp"
            android:id="@+id/user_image"
            android:src="@drawable/secondcup"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
            />

    </FrameLayout>
    <FrameLayout
        android:layout_width="@dimen/_210sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-15dp"
        >
    <ImageView
        android:layout_width="@dimen/_250sdp"
        android:layout_height="wrap_content"
        android:src="@drawable/artboard_3"
        android:scaleType="fitXY"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="khaled mohsen entered your world"
            android:textSize="@dimen/_9ssp"
            android:id="@+id/text"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/whitecolor"
            android:textStyle="bold"
            />
    </FrameLayout>
</LinearLayout>
</LinearLayout>